@import url('https://fonts.googleapis.com/css2?family=IM+Fell+English:ital@0;1&display=swap');

@font-face {
  font-family: 'Playlist Script';
  src: url('Playlist Script.otf') format('opentype');
}

:root {
  --color-primary: #ffa51f;
  --color-secondary: #ff751f;
  --color-accent-1: #ff5757;
  --color-accent-2: #ff4b86;
  --color-dark: #2e281f;
  --color-light: #fefff3;

  --font-main: 'IM Fell English', serif;
  --font-script: 'Playlist Script', cursive;
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html {
  scroll-behavior: smooth;
}

body {
  background-color: var(--color-light);
  font-family: var(--font-main);
  color: var(--color-dark);
  overflow-x: hidden;
}

/* 
   GLOBAL TEXT STYLING 
   "All the text written outside the tiles must be italicised and centered."
*/
/* Helper class for general page content to enforce this */
.page-content-text {
  font-style: italic;
  text-align: center;
}

/* Also apply to specific known text containers */
.hero-text,
.section-header,
.page-title,
.about-text {
  font-style: italic;
  text-align: center;
}

/* Subtext specifically excluded from italics as per latest request */
.hero-subtext {
  font-style: normal;
  text-align: center;
}


/* NAVBAR */
nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 5px 5%;
  /* Even thinner */
  width: 100%;
  position: fixed;
  /* Fixed position */
  top: 0;
  z-index: 100;
  transition: background-color 0.3s;
}

.nav-logo {
  font-family: var(--font-script);
  font-size: clamp(40px, 5vw, 70px);
  color: inherit;
  text-decoration: none;
}

.nav-right {
  display: flex;
  align-items: center;
  gap: 20px;
}

.search-bar {
  padding: 8px 15px;
  border-radius: 20px;
  border: 1px solid currentColor;
  background: transparent;
  color: inherit;
  font-family: var(--font-main);
  margin-right: 5vw;
  width: 25vw;
  font-style: normal;
}

.search-bar::placeholder {
  color: inherit;
  opacity: 0.7;
  font-style: italic;
  /* Search placeholder can be italic maybe? Or user meant ALL non-tile text? Usually placeholders are fine. */
}

/* Desktop Menu */
nav ul {
  display: flex;
  list-style: none;
  gap: 20px;
}

nav ul li a {
  text-decoration: none;
  color: inherit;
  font-size: clamp(14px, 1.5vw, 20px);
  font-family: var(--font-main);
  font-style: normal;
  /* "do not make the navbar's text and hyper text italicised" */
}

/* Hamburger Menu (Hidden by default) */
.fa-solid.fa-bars,
.fa-solid.fa-circle-xmark {
  display: none;
  cursor: pointer;
  font-size: 24px;
}

/* Animations */
.clickable-element {
  transition: transform 0.3s ease;
  cursor: pointer;
}

.clickable-element:hover {
  transform: scale(1.05);
}

/* PAGE LAYOUTS */
.container {
  padding: 100px 5%;
  min-height: 100vh;
}

.section-header {
  font-size: clamp(40px, 5vw, 80px);
  margin-bottom: 30px;
  width: 100%;
}

.page-title-section {
  text-align: center;
  margin-bottom: 50px;
}

.page-title {
  font-size: clamp(50px, 6vw, 100px);
  margin-bottom: 30px;
}

/* TILE GRIDS */
.tile-row {
  display: flex;
  justify-content: center;
  gap: 5vw;
  flex-wrap: wrap;
  margin-bottom: 80px;
  max-width: 100%;
}

.tile {
  flex: 0 0 auto;
  width: clamp(150px, 18vw, 300px);
  height: clamp(150px, 18vw, 300px);
  border-radius: 50%;
  border: 5px solid;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  background-size: cover;
  background-position: center;
  position: relative;
  overflow: hidden;
  text-decoration: none;
  color: var(--color-dark);
}

.tile span {
  position: relative;
  z-index: 2;
  /* "remove the whitish background that they have" -> remove background */
  /* background: rgba(255, 255, 255, 0.7); */
  padding: 10px 20px;
  /* border-radius: 20px; */
  font-size: clamp(16px, 1.8vw, 24px);
  /* Reverted size */
  pointer-events: none;
  /* "unitalicise the text that is written in the tiles" */
  font-style: normal;
}

/* HOME PAGE SPECIFIC */
#home-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 0;
  padding-top: 100px;
  position: relative;
  justify-content: space-between;
}

.hero-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 5%;
  flex-grow: 1;
}

.hero-text-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  width: 65%;
}

.hero-text {
  font-size: clamp(50px, 8vw, 120px);
  line-height: 1.1;
  font-style: italic;
  white-space: nowrap;
  text-align: center;
  width: 100%;
}

.hero-subtext {
  font-size: clamp(20px, 3vw, 40px);
  margin-top: 20px;
  /* "Keep the 'I like solving puzzles... ' line unitalicized. Keep that as plain text, do not make that hypertext." */
  cursor: default;
  /* No pointer */
  width: 100%;
  text-align: center;
  font-style: normal;
}

.hero-image-tile {
  /* "reduce size of the pic.png tile to 70% of its diameter" */
  /* Old was clamp(200px, 25vw, 400px). 70% of that is approx 140, 17.5, 280. */
  width: clamp(140px, 17.5vw, 280px);
  height: clamp(140px, 17.5vw, 280px);
  border-radius: 50%;
  overflow: hidden;
  flex-shrink: 0;
  margin-right: 0;
}

.hero-image-tile img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.home-nav-row {
  display: flex;
  gap: 5vw;
  justify-content: center;
  align-items: center;
  height: 40vh;
  width: 100%;
}

.home-nav-tile {
  height: 31vh;
  /* Increased by ~40% */
  width: 31vh;
  border-radius: 50%;
  overflow: hidden;
  border: 3px solid var(--color-dark);
}

.home-nav-tile img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.header-bg-image {
  display: block;
  width: 100%;
  height: auto;
  object-fit: cover;
}

/* MOBILE RESPONSIVENESS */
@media (max-aspect-ratio: 1/1) {

  /* Collapse Navbar */
  .nav-right ul {
    position: fixed;
    top: 0;
    right: -250px;
    width: 250px;
    height: 100vh;
    background: inherit;
    background-color: var(--color-dark);
    flex-direction: column;
    justify-content: flex-start;
    padding-top: 60px;
    transition: right 0.3s ease;
    z-index: 200;
    box-shadow: -2px 0 5px rgba(0, 0, 0, 0.5);
  }

  .nav-right ul li {
    margin: 20px 0;
    text-align: center;
  }

  .nav-right ul li a {
    font-size: 24px;
    display: block;
  }

  /* "remove the cross and hamburger menu icon from the navbar when it is NOT in collapsed mode" 
       Here inside the media query is "collapsed mode" (mobile). So we SHOW them here. */

  .nav-right ul .fa-circle-xmark {
    display: block;
    position: absolute;
    top: 20px;
    left: 50%;
    transform: translateX(-50%);
    color: inherit;
  }

  .fa-solid.fa-bars {
    display: block;
    margin-left: 20px;
    color: inherit;
  }

  /* Layout Adjustments for Portrait */
  #home-container {
    padding-top: 80px;
    justify-content: center;
    gap: 20px;
  }

  .hero-section {
    flex-direction: column-reverse;
    justify-content: center;
    flex: 0 0 auto;
  }

  .hero-text-container {
    width: 100%;
    align-items: center;
    margin-top: 20px;
  }

  .hero-text {
    white-space: normal;
  }

  .hero-image-tile {
    width: 40vw;
    /* Also reduced relatively? */
    height: 40vw;
  }

  .home-nav-row {
    height: auto;
    flex-wrap: wrap;
    padding: 20px 0;
    flex: 1;
  }

  .home-nav-tile {
    width: 35vw;
    height: 35vw;
  }
}